<!DOCTYPE html>
<html>

	
	
	{% block head %}
	    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	    <link href="{{ asset('./bundles/jobeet2/css/main.css') }}" rel="stylesheet" type="text/css" />
        {% block stylesheet %} {% endblock %}
	    <title>{% block title %} Jobeet2, your best job board {% endblock %}</title>
	{% endblock %}
	
	<body>

        {% block javascript %}{% endblock %}

		{% block body %}
		<div id="container">
		    <div id="header">
		        <div class="content">
		            <h1><a href="{{ path('_homepage') }}">
		                    <img src="{{ asset('./bundles/jobeet2/images/logo.jpg') }}"
		                         alt="Jobeet Job Board" />
		                </a></h1>
		
		            <div id="sub_header">
		                <div class="post">
		                    <h2>Ask for people</h2>
		                    <div>
		                        <a href="{{ path('_job_create') }}">Post a Job</a>
		                    </div>
		                </div>
		
		                <div class="search">
		                    <h2>Ask for a job</h2>
		                    <form action="" method="get">
		                        <input type="text" name="keyword"
		                               id="search_keywords" />
		                        <input type="submit" value="search" />
		                        <div class="help">
		                            Enter some Keyword (city, country, position, ...)
		                        </div>
		                    </form>
		                 </div>
		            </div>
		        </div>
		    </div>
		    
		    <div id="content">
		        <div class="content">
		            {% block content %}
		            content by layout...
		            {% endblock %}            
		        </div>
		        
		    
		    </div>
		    
		    <div id="footer">
		    {% block footer %}
		        <div class="content">
		            <span class="symfony">
		                <img src="{{ asset('./bundles/jobeet2/images/jobeet-mini.png') }}"
		                     alt="symfony mini"/>
		                powered by <a href="http://www.symfony-reloaded.org/">
		                    <img src="{{ asset('./bundles/jobeet2/images/symfony.gif') }}"
		                         alt="symfony framework"/>
		                    </a>
		            </span>
		            <ul>
		                <li><a href="">About Jobeet</a></li>
		                <li class="feed"><a href="">Full feed</a></li>
		                <li><a href="">Jobeet API</a></li>
		                <li class="last"><a href="">Affiliates</a></li>            </ul>
		        </div>
		    {% endblock %}
		    </div>
		</div>
	
	{% endblock body %}
	</body>
</html>
